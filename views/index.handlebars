<div class="jumbotron">
    <h1>Burgers!</h1>
</div>

<div class="" <div id="uneaten-burger-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h2>Uneaten Burgers</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        <p>Burger: {{this.burger_name}}</p>
                        <button class="eat-btn" data-value={{this.id}}>Eat!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-sm">
            <div id="eaten-burger-wrapper">
                <h2>Eaten Burgers</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        <p>Burger: {{this.burger_name}}</p>
                        <button class="delete-btn" data-value={{this.id}}>Delete</button>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <div id="add-burger-wrapper">
        <h2>Add a Burger</h2>

        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="burgerName" name="burger_name">
            </div>

            <button type="submit" id="burger">Add Burger</button>
        </form>
    </div>
</div>